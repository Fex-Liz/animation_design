<body>
    <div class="wrapper">
        <h4><b>F :</b> turn on/off flash</h4>
        <h4><b>Enter :</b> turn on/off animation</h4>
        <div class="night">
            <div class="face_image"></div>
            <div class="car"></div>
        </div>
    </div>
</body>
<script type="text/javascript">
    $(document).ready(function() {
        $faceImage = $(".face_image");
        $car = $(".car");
        $carFlash = $(".car_flash");
        // image-animation
        $(document).on("keypress", function(e) {
            console.log(e.which);
            if (e.which == 13) {
                $($faceImage).toggleClass("move_right");
                $($car).toggleClass("car_move");
            }
        });
        // flash-car
        $(document).on("keypress", function(e) {
            if (e.which == 102) {
                $($car).toggleClass("car_flash");
            }
        });
    });
</script>

